{
  "name": "deepspeech_clean_bpe",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {}
    },
    "log_spec": true
  },
  "text_encoder": {
    "type": "ExternalCTCBPETextEncoder",
    "args": {
      "model_file": "sentencepiece.bpe.model"
    }
  },
  "augmentations": {
    "wave": [],
    "spectrogram": [
      {
        "type": "TimeMasking",
        "args": {
          "time_mask_param": 128,
          "p": 0.3
        }
      },
      {
        "type": "FrequencyMasking",
        "args": {
          "freq_mask_param": 32
        }
      }
    ]
  },
  "arch": {
    "type": "KindaDeepSpeechModel",
    "args": {
      "n_feats": 128
    }
  },
  "data": {
    "train": {
      "batch_size": 128,
      "num_workers": 8,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        },
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-360",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    },
    "val": {
      "batch_size": 128,
      "num_workers": 8,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean"
          }
        }
      ]
    },
    "test-clean": {
      "batch_size": 128,
      "num_workers": 8,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 3e-4
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "BeamWERMetric",
      "args": {
        "name": "WER (beam)"
      }
    },
    {
      "type": "BeamCERMetric",
      "args": {
        "name": "CER (beam)"
      }
    },
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 100,
      "epochs": 50,
      "anneal_strategy": "cos",
      "max_lr": 3e-4,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 100,
    "grad_norm_clip": 10
  }
}
