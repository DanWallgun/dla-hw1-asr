{
  "name": "one_batch_test",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
        "n_fft": 400,
        "n_mels": 80,
        "win_length": 400,
        "hop_length": 160
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [
      {
        "type": "ColoredNoise",
        "args": {
          "sample_rate": 16000,
          "p": 0.25
        }
      }
    ],
    "spectrogram": [
      {
        "type": "TimeStretch",
        "args": {
          "rate": [0.7, 1.3]
        }
      },
      {
        "type": "TimeMasking",
        "args": {
          "time_mask_param": 128,
          "p": 0.4
        }
      },
      {
        "type": "FrequencyMasking",
        "args": {
          "freq_mask_param": 30
        }
      }
    ]
  },
  "arch": {
    "type": "VGGTransformerModel",
    "args": {
      "n_feats": 80
    }
  },
  "data": {
    "train": {
      "batch_size": 100,
      "num_workers": 4,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "limit": 500
          }
        }
      ]
    },
    "val": {
      "batch_size": 100,
      "num_workers": 4,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "limit": 500
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 1e-3
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 100,
      "epochs": 50,
      "anneal_strategy": "cos",
      "max_lr": 1e-3,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 100,
    "grad_norm_clip": 10
  }
}
